# Apache配置文件，用于GitHub Pages上的路径重写

# 允许.sh文件以text/plain格式提供
<FilesMatch "\.sh$">
    Header set Content-Type "text/plain"
    Header set Content-Disposition "inline"
</FilesMatch>

# URL重写规则
RewriteEngine On

# 主安装脚本别名
RewriteRule ^install$ install-online.sh [L,QSA]
RewriteRule ^bootstrap$ bootstrap.sh [L,QSA]

# 版本查询
RewriteRule ^version$ version.txt [L,QSA]

# 防止直接访问某些文件 
<Files "*.yml">
    Order allow,deny
    Deny from all
</Files>